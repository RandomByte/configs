[core]
	quotepath = false
	editor = vim
	filemode = false
	ignorecase = false
	trustctime = false
	autocrlf = true
[color]
  ui=true
[credential]
  helper=wincred
[mergetool]
	keepBackup = true
[push]
	default = simple
[pull]
	rebase=true
[rerere]
	enabled=true
	autoupdate=true
[alias]
	last = log -1 --stat
	cp = cherry-pick
	co = checkout
	cl = clone
	ci = commit
	st = status -sb
	br = branch
	unstage = reset HEAD --
	dc = diff --cached
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all
	lga = log --oneline --graph --decorate --all
	b = branch
	l = log --oneline --graph --decorate --all -5
	lb = log --oneline --graph --decorate -5
	lgb = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
